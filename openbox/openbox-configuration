#!/bin/bash

# Author: Nathanel Titane - nathanel.titane@gmail.com - Copyright 2014

# openbox configuration #

black= red= green= yellow= blue= magenta= cyan= white= reset=

if [[ -t 1 ]]
then
	black=$(tput setaf 0)
	red=$(tput setaf 1)
	green=$(tput setaf 2)
	yellow=$(tput setaf 3)
	blue=$(tput setaf 4)
	magenta=$(tput setaf 5)
	cyan=$(tput setaf 6)
	white=$(tput setaf 7)
	reset=
$(tput sgr0);
fi

version="22"

home="/home/${SUDO_USER:-$USER}"
configuration_directory="$home/.config/openbox"

if [ ! -d "$configuration_directory" ]
then
	mkdir -p "$configuration_directory"
fi

cd "$configuration_directory" || exit

echo "${cyan}Generating Openbox 'autostart' file...${reset}"

cat > "$configuration_directory"/autostart << 'FILE'
# autostart #

# background color #

background=""

if which hsetroot >/dev/null
then
	background=hsetroot
	else
		if which esetroot >/dev/null
		then
		background=esetroot
		else
			if which xsetroot >/dev/null
			then
			background=xsetroot
			fi
	fi
fi

test -z "$background" || "$background" -solid "#202020"

# gnome settings daemon #

if test -x /usr/libexec/gnome-settings-daemon >/dev/null
then
	/usr/libexec/gnome-settings-daemon &

elif which gnome-settings-daemon > /dev/null
then
	gnome-settings-daemon &
fi
FILE

# menu #

echo "${cyan}Generating Openbox 'menu' file...${reset}"

cat > "$configuration_directory"/menu.xml << 'FILE'
<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/ file:///usr/share/openbox/menu.xsd">
