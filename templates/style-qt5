#!/bin/bash

# Author: Nathanel Titane - nathanel.titane@gmail.com

# qt5 style #

# dependencies #

curl -sL dep.dxtp.app/console > /usr/bin/console && source /usr/bin/console

# variables #

environment_file="/etc/environment"

# install #

console.inf "Installing required packages and utilities..."

install_list=(
	qt5-style-plugins
)

for package in ${install_list[@]}
do
	console.inf "Installing ${package} and applicable dependencies..."

	echo yes | apt install ${package}
done

# create configuration #

console.inf "Adding style configuration parameter (Qt5)..."

cat << 'FILE' >> "$environment_file"

# fix themeing compliance for qt5 applications #

QT_QPA_PLATFORMTHEME=gtk2
FILE
